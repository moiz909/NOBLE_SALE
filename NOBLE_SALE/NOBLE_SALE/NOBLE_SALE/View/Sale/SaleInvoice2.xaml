                                                </StackLayout.GestureRecognizers>-->
                                            </StackLayout>
                                            </SwipeItemView>
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                </SwipeView>
                            </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
